arr=[]
size=int(input("Enter the array size:"))
for i in range(0,size):
    ele=int(input("Enter the element:"))
    arr.append(ele)

def linear_search(arr,target_id):
    for i in range(len(arr)):
        if arr[i]==target_id:
            return True
    return False
    
def binary_search(arr,target_id):
    arr.sort()
    low=0
    high=len(arr)-1
    while low<=high:
        mid=(low+high)//2
        if arr[mid]==target_id:
            return True
        elif arr[mid]<target_id:
            low=mid+1
        else:
            high=mid-1
    return False
    
def menu():
    print("1.Linear")
    print("2.binary")
    print("3.exit")
menu()
choice=int(input("Enter your choice:"))

while True:
    
    if choice==1:
        search=int(input("Enter the id:"))
        found=linear_search(arr,search)
        if found:
            print("id found")
        else:
            print("Id not found")
        break
    elif choice==2:
        search=int(input("Enter the id:"))
        found=binary_search(arr,search)
        if found:
            print("id found")
        else:
            print("Id not found")
        break
    elif choice==3:
        print("Exiting....")
        break
    else:
        print("Invalid input")
        break
